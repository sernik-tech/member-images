# Lock screen modifications
[org.gnome.desktop.peripherals.touchpad:GNOME-Greeter]
tap-to-click=true

[org.gnome.desktop.interface:GNOME-Greeter]
font-name = "Lexend Deca 11"

# GNOME shell modifications
[org.gnome.shell]
favorite-apps = ['org.gnome.Nautilus.desktop', 'org.mozilla.firefox.desktop', 'org.gnome.Terminal.desktop']
enabled-extensions = ['openweather-extension@jenslody.de', 'appindicatorsupport@rgcjonas.gmail.com', 'gsconnect@andyholmes.github.io', 'gamemode@christian.kellner.me', 'just-perfection-desktop@just-perfection', 'user-theme@gnome-shell-extensions.gcampax.github.com', 'blur-my-shell@aunetx', 'pip-on-top@rafostar.github.com', 'pano@elhan.io', 'undecorate@sun.wxg@gmail.com', 'Vitals@CoreCoding.com', 'azwallpaper@azwallpaper.gitlab.com', 'burn-my-windows@schneegans.github.com', 'dash-to-dock@micxgx.gmail.com']

[org.gnome.desktop.interface]
gtk-theme = "Catppuccin-Mocha-Compact-Green-Dark"
icon-theme = "Papirus-Dark"
cursor-theme = "Bibata-Modern-Light"
font-antialiasing = "rgba"
font-name = "Lexend Deca 10"
document-font-name = "Lexend Deca Medium 11"
monospace-font-name = "JetBrainsMono Nerd Font 11"

[org.gnome.shell.extensions.user-theme]
name = "Catppuccin-Mocha-Compact-Green-Dark"

[org.gnome.desktop.wm.preferences]
resize-with-right-button = true

[org.gnome.desktop.wm.keybindings]
move-to-workspace-1 = ['<Super>1']
move-to-workspace-2 = ['<Super>2']
move-to-workspace-3 = ['<Super>3']
move-to-workspace-4 = ['<Super>4']
switch-to-workspace-1 = ['<Control><Super>1']
switch-to-workspace-2 = ['<Control><Super>2']
switch-to-workspace-3 = ['<Control><Super>3']
switch-to-workspace-4 = ['<Control><Super>4']
#toggle-message-tray = ['<Control><Super>n']
close = ['<Super>q']
maximize = ['<Super>Page_Up']
minimize = ['<Super>Page_Down']
toggle-fullscreen = ['<Super>f']

[org.gnome.desktop.peripherals.touchpad]
tap-to-click = true
natural-scroll = false

#[org.gnome.desktop.peripherals.mouse]
#accel-profile = flat

[org.gnome.shell.extensions.dash-to-dock]
hot-keys = false

[org.gnome.shell.extensions.just-perfection]
search = false
startup-status = 0
animation = 4

[org.gnome.shell.extensions.blur-my-shell]
hacks-level = 1

[org.gnome.shell.extensions.blur-my-shell.panel]
blur = false

[org.gnome.shell.extensions.blur-my-shell.applications]
blur = false

[org.gnome.shell.extensions.openweather]
position-index = 2

[org.gnome.shell.extensions.vitals]
position-in-panel = 0
update-time = 15
hot-sensors = ['_processor_usage_', '_memory_allocated_', '_storage_used_']

[org.gnome.shell.extensions.azwallpaper]
slideshow-directory = "/usr/share/backgrounds/catppuccin"
slideshow-slide-duration = (0, 30, 0)
slideshow-wallpaper-queue = ['asteroid-miner-mocha.png', 'astro-jelly-mocha.jpg', 'cat-pondering-mocha.png', 'space-mocha.jpg', 'black-hole-mocha.png', 'plasma-6-day-mocha.png', 'galaxies-mocha.png', 'plasma-6-night-mocha.png', 'galaxy-mocha.png']
slideshow-current-wallpapper = "black-hole-mocha.png"

# Pano
[org.gnome.shell.extensions.pano]
global-shortcut = ['<Super>v']
incognito-shortcut = ['<Shift><Super>v']
window-background-color = "rgba(30,30,46,0.70)"
incognito-window-background-color = "rgba(108,112,134,0.70)"
search-bar-font-family = "Lexend Deca"
item-title-font-family = "Lexend Deca"
item-date-font-family = "Lexend Deca"
active-item-border-color = "rgb(166,227,161)"
hovered-item-border-color = "rgba(166,227,161,0.686667)"

[org.gnome.shell.extensions.pano.link-item]
header-bg-color = "rgb(137,180,250)"
header-color = "rgb(30,30,46)"
body-bg-color = "rgb(137,180,250)"
metadata-bg-color = "rgb(49,50,68)"
metadata-title-color = "rgb(205,214,244)"
metadata-description-color = "rgb(205,214,244)"
metadata-link-color = "rgb(205,214,244)"
metadata-title-font-family = "Lexend Deca"
metadata-description-font-family = "Lexend Deca"
metadata-link-font-family = "Lexend Deca"
metadata-link-font-family = "Lexend Deca

